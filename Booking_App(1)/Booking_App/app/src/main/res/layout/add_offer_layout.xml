<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#fff"
    android:layout_marginBottom="20dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/add_offer_count"
            android:textSize="18dp"
            android:text="1"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="Title offer"
                android:id="@+id/add_title_offer"
                android:textSize="20dp"
                android:background="@drawable/bgtext_add"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="12dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/recycle"
                android:id="@+id/removeOffer"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            app:riv_corner_radius="3dp"
            android:background="@drawable/bgtext_add"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_"
            android:id="@+id/add_offer_img" />

    </LinearLayout>


</androidx.cardview.widget.CardView>